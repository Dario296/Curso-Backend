<h2 style="color:crimson;">Historial</h2>
<div class="table-responsive">
    <a class="nav-link" href="/api/productos/cargar">Cargar Producto</a>
    {{#if productos}}
        <table class="table table-dark">
            <tr style="color: yellow;">
                <th>Nombre</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
            {{#each productos}}
            <tr>
                <td>{{title}}</td>
                <td>{{price}}</td>
                <td>{{thumbnail}}</td>
            </tr>
            {{/each}}
        </table>
    {{else}}
    <h2>no hay productos</h2>
    {{/if}}
</div>